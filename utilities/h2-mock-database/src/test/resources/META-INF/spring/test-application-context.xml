<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
       http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="subscriptionTestDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.h2.jdbcx.JdbcDataSource" />
		<property name="url" value="jdbc:h2:mem:subscription" />
		<property name="username" value="sa" />
		<property name="initialSize" value="1" />
		<property name="maxActive" value="3" />
		<property name="validationQuery" value="select 1" />
		<property name="testOnBorrow" value="true" />
	</bean>

	<bean id="auditLogTestDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.h2.jdbcx.JdbcDataSource" />
		<property name="url" value="jdbc:h2:mem:auditlog" />
		<property name="username" value="sa" />
		<property name="initialSize" value="1" />
		<property name="maxActive" value="3" />
		<property name="validationQuery" value="select 1" />
		<property name="testOnBorrow" value="true" />
	</bean>

</beans>